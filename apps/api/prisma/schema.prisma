generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

model Activity {
  id        String   @id @default(cuid())
  title     String
  userId    Int
  taskId    Int
  createdAt DateTime @default(now())
}

model Task {
  id          String   @id @default(cuid())
  title       String
  userId      Int
  description String
  completed   Boolean  @default(false)
  createdAt   DateTime @default(now())
}

model User {
  id            String    @id @default(cuid())
  name          String?
  image         String?
  email         String    @unique
  createdAt     DateTime? @default(now())
  bio           String?
  password      String?
  emailVerified Boolean?  @default(false)
  login         String?
  Account       Account[]
  Session       Session[]
  Journey       Journey[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Journey {
  id               String            @id @default(cuid())
  title            String
  description      String
  userId           String
  bluePrintId      String?
  Goal             Goal[]
  Interest         Interest[]
  user             User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  JourneyBluePrint JourneyBluePrint? @relation(fields: [bluePrintId], references: [id], onDelete: Cascade)
}

model Goal {
  id        String   @id @default(cuid())
  title     String
  achieved  Boolean
  Journey   Journey? @relation(fields: [journeyId], references: [id])
  journeyId String?
}

model Field {
  id        String   @id @default(cuid())
  title     String
}

model Experience {
  id        String   @id @default(cuid())
  title     String
}

model JourneyPrivacy {
  id        String @id @default(cuid())
  userId    String
  journeyId String
}

model AcademicJourney {
  id        String   @id @default(cuid())
  title     String
}

model BusinessJourney {
  id        String   @id @default(cuid())
  title     String
}

model CareerJourney {
  id        String   @id @default(cuid())
  title     String
}

model PersonalJourney {
  id        String   @id @default(cuid())
  title     String
}

model JourneyBluePrint {
  id          String    @id @default(cuid())
  userId      String?
  type        String?
  templateId  String?
  title       String
  description String?
  field       String?
  expertise   String?
  price       String?
  creator     String?
  createdAt   String?
  updateAt    String?
  image       String?
  Journey     Journey[]
}

model Interest {
  id        String   @id @default(cuid())
  Journey   Journey? @relation(fields: [journeyId], references: [id])
  journeyId String?
}

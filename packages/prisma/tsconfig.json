{
    "extends": "tsconfig/base.json",
    "compilerOptions": {
      "baseUrl": ".",
      "outDir": "./dist",
      "resolveJsonModule": true,
      "removeComments": true,
      "alwaysStrict": true,
      "sourceMap": false,
      "skipLibCheck": true,
      "esModuleInterop": false,
      "paths": {
        "*": [
          "types/*"
        ]
      }
    },
    "include": ["*"]
  }